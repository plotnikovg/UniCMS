@model IEnumerable<UniCMS.Data.Models.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="main.css">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
</head>
<body>
    <div id="authorizationPage" style="display:none;">
        <span style="margin-left:59px;">Вход</span>
        <input name="UserName" placeholder="Логин" style="margin-top: 144px;margin-bottom: 27px;">
        <input name="Password" placeholder="Пароль" type="password" style="margin-top: 212px;">
    </div>
    <div id="hidden" style="margin:0 auto;width:100%;height:100%" onclick="closeAuth()">

    </div>
    <header>
        <div id="header">
            <a href="#"><img src="img/logo.png" class="logoimg"></a>
            <div class="header_section">
                <div class="header_item Button1" style="width:355px;margin-left: 20px;"><img src="img/threestripes.png" class="stripes"><a class="catalog" href="#">Каталог товаров</a></div>
                <div class="header_item Button2" style="width:215px;"><a href="#">Доставка</a></div>
                <div class="header_item Button3" style="width:178px;"><a href="#">О нас</a></div>
                <div class="header_item Button4" style="width:158px;"><a href="#">Ещё</a></div>
                <div class="header_item Button5" style="width:160px;margin-left: 160px;"><img src="img/loginimg.png" class="loginimg" style="margin-left: 20px;"><a asp-controller="Admin" asp-action="Admin">Вход</a></div>
            </div>
        </div>

    </header>
    <div id="main">
        <div class="container">
            <div class="row justify-content-start">
                @foreach (var item in Model)
                {
                    <div class="col-3" style="padding: 0 17px 0 17px; width: 330px;">
                        <div class="bg">
                            <div class="productimage" style="border-radius:11px;height: 233px; width:248px; background-color: #78ADB9; margin-left: 24px;">
                            </div>
                            <h2 style="margin-top:8px;margin-left: 24px; font-size:24px;">@item.Name</h2>
                            <h4 style="margin-top: 14px;margin-left: 24px;font-size:12px;">@item.Description</h4>
                            <div class="priceHover">
                                <div class="price" style="width: 154px; height: 100%; background-color: white; border-radius: 5px 0 0 5px;">@item.Price ₽</div>
                                <div class="buyButton" style="width: 94px; height: 100%; border-radius: 0 4px 4px 0; color: #FFF; cursor: pointer;">Купить</div>
                            </div>
                        </div>

                    </div>
                }
            </div>

        </div>
    </div>
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="main.js"></script>
</body>
</html>